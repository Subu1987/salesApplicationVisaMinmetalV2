<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:table="sap.ui.table" xmlns:suite="sap.suite.ui.commons"
	xmlns:viz="sap.viz.ui5.controls" xmlns:vizData="sap.viz.ui5.data" xmlns:vizFeeds="sap.viz.ui5.controls.common.feeds">
	<suite:ChartContainer id="chartContainer" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false" title="Revenue">
		<!-- Chart Content -->
		<suite:content>
			<suite:ChartContainerContent icon="sap-icon://bar-chart" title="Chart View">
				<suite:content>
					<viz:VizFrame id="idVizFrame" vizType="column" height="400px" width="100%">
						<viz:dataset>
							<vizData:FlattenedDataset data="{allCustlistData>/allCustlistDataFiscalYearWise}">
								<vizData:dimensions>
									<vizData:DimensionDefinition name="Customer Code" value="{allCustlistData>customerCode}"/>
								</vizData:dimensions>
								<vizData:measures>
									<vizData:MeasureDefinition name="Turn Over" value="{allCustlistData>turnOver}"/>
									
								</vizData:measures>
							</vizData:FlattenedDataset>
						</viz:dataset>
						<viz:feeds>
							<vizFeeds:FeedItem uid="valueAxis" type="Measure" values="Turn Over"/>
							<vizFeeds:FeedItem uid="categoryAxis" type="Dimension" values="Customer Code"/>
							<vizFeeds:FeedItem uid="color" type="Dimension" values="Customer Code"/>
						</viz:feeds>
					</viz:VizFrame>
				</suite:content>
			</suite:ChartContainerContent>
			<!-- Table Content -->
			<suite:ChartContainerContent icon="sap-icon://table-chart" title="Table View">
				<suite:content>
					<table:Table id="idTable" rows="{allCustlistData>/allCustlistDataFiscalYearWise}" selectionMode="None">
						<table:columns>
							<table:Column>
								<Label text="Customer Code"/>
								<table:template>
									<Text text="{allCustlistData>customerCode}"/>
								</table:template>
							</table:Column>
							<!--<table:Column>
								<Label text="Fiscal Year"/>
								<table:template>
									<Text text="{allCustlistData>fiscalYear}"/>
								</table:template>
							</table:Column>-->
							<table:Column>
								<Label text="Turn Over"/>
								<table:template>
									<Text text="{allCustlistData>turnOver}"/>
								</table:template>
							</table:Column>
						</table:columns>
					</table:Table>
				</suite:content>
			</suite:ChartContainerContent>
		</suite:content>
	</suite:ChartContainer>
</core:FragmentDefinition>
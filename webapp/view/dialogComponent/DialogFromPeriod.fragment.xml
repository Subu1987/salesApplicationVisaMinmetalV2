<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <SelectDialog
        title="Select Period"
        items="{periodData>/}"
        search="_handleValueFromPeriodSearch"
        confirm="_handleValueDialogFromPeriodClose"
        cancel="_handleValueDialogFromPeriodClose"
        contentWidth="auto"
        class="sapUiPopupWithPadding">
        <StandardListItem
            title="{periodData>Monat}"
            description="{periodData>ZMONTHS}"
            iconDensityAware="false"
            iconInset="false" />
    </SelectDialog>
</core:FragmentDefinition>
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <SelectDialog
        title="Select Period"
        items="{periodData>/}"
        search="_handleValueToPeriodSearch"
        confirm="_handleValueDialogToPeriodClose"
        cancel="_handleValueDialogToPeriodClose"
        contentWidth="auto"
        class="sapUiPopupWithPadding">
        <StandardListItem
            title="{periodData>Monat}"
            description="{periodData>ZMONTHS}"
            iconDensityAware="false"
            iconInset="false" />
    </SelectDialog>
</core:FragmentDefinition>